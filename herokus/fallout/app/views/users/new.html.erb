<h2> register as a new user </h2>

<div id='form-signup'>

  <h3> sign up </h3>
  <%= form_tag do %>
  <p>
  <%= label_tag 'username :' %>
  <%= text_field_tag :username %>
  </p>

  <p>
  <%= label_tag 'e-mail :' %>    
  <%= text_field_tag :email %>
  </p>

  <p>
  <%= label_tag 'password :' %>
  <%= password_field_tag :password %>
  </p>
  <%= submit_tag 'sign me up' %>
  <% end %>

</div>